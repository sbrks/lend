<div class="container">
<h3>My Stuff</h3>
    <% @items.each do |item| %>

      <% if @user_id === item.user_id %>
<div class="container">
	<div class="row">
      <div class="col s12 m6 l6">
      <h3>Stuff I've Offered</h3>

        <h3><a href="/items/<%= item.id %>/"> <%= item.title %> </a></h3>
          Posted <%= (time_ago_in_words(item.created_at)) %> ago<br>
          Description: <%= item.description %> <%= item.user_id %><br>
          <%= link_to "Delete Item", {:controller => :items, :action => 'destroy', :id => item.id }, :method => :delete, :class => "trash-btn" %><br>
          <a href="/items/<%= item.id %>/edit">Edit Post</a>
    	</div>
   <div class="col s12 m6 l6">
      <h3>Stuff I've Borrowed</h3>
        <h3><a href="/items/<%= item.id %>/"> <%= item.title %> </a></h3>
          Posted <%= (time_ago_in_words(item.created_at)) %> ago<br>
          Description: <%= item.description %> <%= item.user_id %><br>
          <%= link_to "Delete Item", {:controller => :items, :action => 'destroy', :id => item.id }, :method => :delete, :class => "trash-btn" %><br>
          <a href="/items/<%= item.id %>/edit">Edit Post</a>
    	</div>
	</div>
    <% end %>
   </div>
 </div> 
<% end %>

