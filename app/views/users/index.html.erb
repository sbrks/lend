<p id="notice"><%= notice %></p>

<div class="container">


<div class="form-group center-align" style="background-color: white">
    <div class="form-control">
      <fieldset>
        <label>Search for a User:</label>
          <%= form_tag(users_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search by name, location, or email" %>
          <%= submit_tag "Search", class: 'btn btn-primary blue' %>
          <% end %>
      </fieldset>
      </div>
  </div>
</div>
    <% if @users.present? %>
     <%= render "users" %>
     <% else %>
      <h5>There are no users containing the term(s) <%= params[:search] %>.</h5>
    <% end %>
</div>



<h1 style="text-align: center">All Users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Location</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><img src="<%= user.image_url %>" width="100px" height="110px"</td>
        <td><%= user.first_name %></td>
        <td><%= user.location %></td>
        <td class="btn blue" style="margin-top:50px"><%= link_to 'Profile', user, style:"color:white" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New user', new_user_path %>
</div>
</div>