<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<% @items.each do |item| %>
    <div class="row">
      <div class="col s12">
        <div class="card hoverable indigo darken-1">
            <div class="card-header">
              <img src="#" height="200px" width="100%"/>
            </div>

          <div class="card-content" style="background-color:white"><h4><%= item.title %></h4>
              <p><%= item.description %></p>
                <h5>Offered by: <%= current_user.id %> </h5>
                <h5>Created at: <%= item.created_at %>

                <h5>Availability: <%= item.availability %></h5>
              <h5>Price:<%= item.price %></h5>
            </div>

      <div class="card-footer">
         <div class="card-action">
                 <%= link_to 'Show', item %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to 'Back', items_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>


<%= link_to 'New Item', new_item_path %>