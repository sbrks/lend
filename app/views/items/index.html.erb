<p id="notice"><%= notice %></p>
<div class='container center-align'>
<h3>All Items</h3>

<div class="editprof waves-effect waves-light red lighten-1 btn"><%= link_to 'Add New Item', new_item_path %></div>



<!-- function search form! -->
<div class="container center-align">
    <h4>Search Items</h4>
     <fieldset>
      <label>Search for an item:</label>
        <%= form_tag items_path, method: :get do %>

        <div class='form-group'>
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </fieldset>     
        </div>
    <% end %>
</div>


<% @items.each do |item| %>
    <div class="row">
<div class="col s12 m6 l6">
  <ul class="img-list">
    <li>
      <img src="<%= item.image_url %>" width="400px" height="325px" />
      <span class="text-content">
        <span><%= item.title %><br><br><br>
        <a class="btn itembutt" href="/items/<%= item.id %>">See More</a>
        </span>
        </span>
      </a>
    </li>
  </ul>
  </div>
  <% end %>


<% @items.each do |item| %>
    <div class="row">
      <div class="col s10 l6">
        <div class="card hoverable indigo darken-1">

            <div class="card-header">
              <img src="#" height="200px" width="100%"/>
            </div>

          <div class="card-content" style="background-color:white"><h4><%= item.title %></h4>
              <p><%= item.description %></p>
                <h5>Offered by: <%= item.user_id %> </h5>
                <h5>Created at: <%= item.created_at.strftime("%m/%d/%y") %> </h5>

                <h5>Availability: <%= item.availability %></h5>
              <h5>Price:<%= item.price %></h5>
            </div>

        <div class="card-footer">
         <div class="card-action">
              <%= link_to 'More Info', item %>
              <%= link_to 'Borrow This', edit_item_path(item) %>
              <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
              <%= link_to 'Back', items_path %>
          </div>
        </div>


      </div>
    </div>

  <% end %>
</div>

  <div class="editprof waves-effect waves-light red lighten-1 btn"><%= link_to 'Post New Item', new_item_path %></div>


